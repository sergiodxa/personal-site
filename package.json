{
  "name": "personal-site",
  "description": "Sergio Xalambrí's personal website",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "prebuild": "yarn clean",
    "dev": "pm2-dev pm2.config.js",
    "build": "yarn build:css && yarn build:remix",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build2",
    "clean": "del .cache build public/build app/styles",
    "typecheck": "tsc --project app",
    "vercel-build": "yarn build:css && yarn build:remix"
  },
