    "@sergiodxa/icons": "1.0.1",
    "@sergiodxa/map": "1.0.4",
    "@sergiodxa/palette": "1.0.1",
    "@sergiodxa/request": "1.0.1",
    "@sergiodxa/terminal": "1.0.1",
    "@sergiodxa/types": "1.0.1",
    "@sergiodxa/ui": "1.1.0",
    "@zeit/next-mdx": "1.1.0",
    "apollo-cache-inmemory": "1.2.2",
    "apollo-cache-persist": "0.1.1",
    "apollo-client": "2.3.2",
