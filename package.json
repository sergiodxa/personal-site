{
  "name": "personal-site",
  "description": "Sergio Xalambrí's personal website",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export -o dist",
    "postexport": "cp static/sw.js dist && cp static/robots.txt dist && npm run build:rss && npm run build:sitemap",
    "build:rss": "npm run build:rss:essays && npm run build:rss:links",
    "build:rss:essays": "node scripts/build-rss-essays.js",
    "build:rss:links": "node scripts/build-rss-links.js",
    "build:sitemap": "node scripts/build-sitemap.js",
    "alias": "now alias",
    "start": "next start",
    "start:static": "serve -p 3000",
    "deploy": "now",
    "postdeploy": "npm run alias",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiodxa/personal-site.git"
  },
  "keywords": [
    "nextjs",
    "blog",
    "personal-website",
    "personal-site"
  ],
  "author": {
    "name": "Sergio Daniel Xalambrí",
    "email": "hello@sergiodxa.com",
    "url": "https://sergiodxa.com/"
  },
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/sergiodxa/personal-site/issues"
  },
  "homepage": "https://sergiodxa.com",
  "dependencies": {
    "@mdx-js/mdx": "0.12.0",
    "@mdx-js/tag": "0.11.0",
    "@sergiodxa/fs": "1.1.6",
    "@sergiodxa/icons": "1.0.1",
    "@sergiodxa/map": "1.0.4",
    "@sergiodxa/palette": "1.0.1",
    "@sergiodxa/types": "1.0.1",
    "@sergiodxa/ui": "1.1.2",
    "@zeit/next-mdx": "1.1.0",
    "classnames": "2.2.6",
    "compose-function": "3.0.3",
    "date-fns": "1.29.0",
    "globby": "8.0.1",
    "lodash.memoize": "4.1.2",
    "next": "6.1.0",
    "next-analytics": "1.0.0",
    "next-nprogress": "1.0.2",
    "now-env": "3.1.0",
    "prop-types": "15.6.2",
    "prop-types-exact": "1.2.0",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "remark-abbr": "1.1.2",
    "remark-emoji": "2.0.1",
    "slugify": "1.3.0"
  },
  "devDependencies": {
    "jest": "^23.2.0",
    "jest-puppeteer": "^3.2.1",
    "puppeteer": "^1.5.0",
    "serve": "^9.1.0"
  },
  "jest": {
    "notify": true,
    "notifyMode": "failure",
    "preset": "jest-puppeteer"
  }
}
