  "scripts": {
    "dev:css": "NODE_ENV=development postcss styles --config config/postcss.config.js --base styles --dir app/styles -w",
    "dev:app": "remix dev",
    "dev": "pm2-dev config/pm2.config.js",
    "build:css": "NODE_ENV=production postcss styles --config config/postcss.config.js --base styles --dir app/styles --env production",
    "build:app": "remix build",
    "build": "yarn build:css && yarn build:app",
    "start": "remix-serve server/build",
    "lint": "eslint --ext .ts,.tsx app/",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --project app/tsconfig.json --noEmit",
    "test:unit": "jest --config=config/jest.config.ts --passWithNoTests",
    "test:e2e:run": "cypress run --config-file config/cypress.json",
    "test:e2e:open": "cypress open --config-file config/cypress.json",
    "test": "yarn test:unit && yarn test:e2e:run",
    "deploy": "vercel",
    "deploy:prod": "vercel --prod"
  },
  "dependencies": {
    "@remix-run/node": "^0.17.5",
    "@remix-run/react": "^0.17.5",
