    "inflected": "^2.1.0",
    "ms": "^2.1.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.1",
    "remix": "0.17.5",
    "remix-utils": "^1.0.2"
  },
