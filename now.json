{
  "name": "personal-site",
  "alias": "site.sergiodxa.com",
  "type": "static",
  "env": {
    "NODE_ENV": "@env"
  },
  "files": ["dist"],
  "public": true,
  "static": {
    "public": "dist",
    "headers": [
      {
        "source": "_next/**/*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, immutable, max-age=31536000"
          }
        ]
      },
      {
        "source": "_next/static/commons/*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "proxy-revalidate, must-revalidate, max-age=86400"
          }
        ]
      },
      {
        "source": "static/**/*.@(jpg|png|asc|json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, immutable, max-age=31536000"
          }
        ]
      },
      {
        "source": "service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "atom",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "proxy-revalidate, must-revalidate, max-age=3600"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "proxy-revalidate, must-revalidate, max-age=3600"
          }
        ]
      }
    ],
    "directoryListing": false,
    "trailingSlash": false
  }
}
